<% if header.present? %>
  <div class="highlight">
     <% if header.image.present? %>
        <% if header.link_url.present? %>
          <%= link_to header.link_url do %>
     	    <%= image_tag(header.image_url(:large),
		  style: "width: 100%",
		  alt: header.image.title) %>
          <% end %>
        <% else %>
     	  <%= image_tag(header.image_url(:large),
		  style: "width: 100%",
		  alt: header.image.title) %>
        <% end %>
    <% end %>
  </div>
  <div class="highlight jumbo">
    <div class="margin small-12 medium-9 small-centered text-center">
          <span><%= header.label %></span>
      <h1><%= header.title %></h1>
      <%= auto_link_already_sanitized_html wysiwyg(header.description) %>
      <div class="small-10 medium-6 large-4 small-centered">
        <% if header.link_text.present? %>
          <%= link_to header.link_text, header.link_url, class: "button expanded large" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="background-header"></div>
  <% end %>
